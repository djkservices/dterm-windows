{
  "name": "dterm",
  "version": "3.0.0",
  "description": "Developer workspace with terminal, file browser, code editor, FTP, and notes",
  "author": "djkservices",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:win": "electron-builder --win"
  },
  "dependencies": {
    "basic-ftp": "^5.0.4",
    "electron-updater": "^6.7.3",
    "monaco-editor": "^0.45.0",
    "node-pty": "^1.0.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-search": "^0.13.0",
    "xterm-addon-serialize": "^0.11.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "build": {
    "appId": "com.mynetworktools.dterm",
    "productName": "dTerm",
    "win": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "**/*",
      "!node_modules/**/node-pty/build/**/*",
      "node_modules/node-pty/build/Release/*.node",
      "node_modules/node-pty/build/Release/*.exe",
      "node_modules/node-pty/build/Release/*.dll"
    ],
    "asarUnpack": [
      "node_modules/node-pty"
    ],
    "publish": {
      "provider": "generic",
      "url": "https://mynetworktools.com/dterm/api/updates/win/"
    }
  }
}
